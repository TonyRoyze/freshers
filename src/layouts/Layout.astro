---
import background from "../assets/background2.png";
import background2 from "../assets/background.png";
import Image from "astro/components/Image.astro";
import "../styles/global.css";
import EventCarousel from "../components/EventCarousel.astro";
---

<!doctype html>
<html lang="en" class="h-full w-full m-0">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png+xml" href="../assets/college.png" />
		<meta name="generator" content={Astro.generator} />
		<title>Freshers Championship</title>
	</head>
	<body class="mx-auto max-w-[1440px]">
		<Image
			src={background}
			alt="background"
			class="fixed md:hidden top-0 left-0 w-full h-full -z-10"
			loading="eager"
			fetchpriority="high"
		/>
		<Image
			src={background2}
			alt="background"
			class="hidden md:block fixed top-0 left-0 w-full h-full -z-10"
			loading="eager"
			fetchpriority="high"
		/>
		<div class="lg:grid lg:grid-cols-5 lg:flex-row h-full" id="container">
			<!-- <Navigation /> -->
			<main class="lg:col-span-4 p-6">
				<EventCarousel />
				<slot />
			</main>
			<footer
				class="fixed bottom-0 left-0 w-full bg-[var(--color-muted)]/60 backdrop-blur-sm p-4"
			>
				<div
					class="max-w-[1440px] mx-auto flex justify-between items-center text-sm"
				>
					<div>
						<a
							href="https://instagram.com/fresherschampionship"
							target="_blank"
							rel="noopener noreferrer"
							class="hover:text-white transition-colors"
						>
							Follow us on Instagram
						</a>
					</div>
					<div>
						<a
							href="https://github.com/viduraakalanka/whole-wavelength"
							target="_blank"
							rel="noopener noreferrer"
							class="hover:text-white transition-colors"
						>
							‚≠ê Star on GitHub
						</a>
					</div>
				</div>
			</footer>
		</div>
	</body>
</html>
